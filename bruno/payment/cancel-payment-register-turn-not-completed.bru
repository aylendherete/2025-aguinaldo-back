meta {
  name: Cancel Payment Register Turn Not Completed
  type: http
  seq: 25
}

patch {
  url: {{baseUrl}}/api/payments/turn/{{pendingTurnId}}/cancel
  auth: bearer
}

auth:bearer {
  token: {{doctorAccessToken}}
}

assert {
  res.status: eq 400
}

tests {
  test("Should reject cancel when turn is not COMPLETED", function() {
    const body = res.getBody();
    expect(res.getStatus()).to.equal(400);
    expect(body.message || body.error).to.include("completed turns");
  });
}
