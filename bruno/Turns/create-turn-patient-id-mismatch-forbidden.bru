meta {
  name: Create Turn - Patient ID Mismatch Forbidden
  type: http
  seq: 12
}

post {
  url: {{baseUrl}}/api/turns
  body: json
  auth: bearer
}

auth:bearer {
  token: {{patientAccessToken}}
}

body:json {
  {
    "doctorId": "{{doctorId}}",
    "patientId": "{{doctorId}}",
    "scheduledAt": "{{scheduledAt}}"
  }
}

assert {
  res.status: eq 403
}


tests {
  test("Should reject patient creating turn for another user", function() {
    expect(res.getStatus()).to.equal(403);
  });
}
